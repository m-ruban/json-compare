{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "paths": {
      "root/*": ["./src/*"],
      "hoc/*": ["./src/hoc/*"],
      "modules/*": ["./src/modules/*"],
      "components/*": ["./src/components/*"]
    }
  }
}