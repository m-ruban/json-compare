{
    "parser": "babel-eslint",
    "root": true,
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/standard",
        "plugin:jest/recommended"
    ],
    "plugins": ["prettier", "react", "react-hooks", "import"],
    "rules": {
        "prettier/prettier": ["error"],
        "react-hooks/exhaustive-deps": "warn",
    },
    "settings": {
        "react": {
            "version": "16.7.0"
        },
        "import/resolver": {"webpack": {
            "config": "./webpack.config.js"
        }}
    }
}
